---
interface Props {
  subtitle: string;
  address: string;
  image?: string;
}

const { subtitle, address, image } = Astro.props;
const basePath = import.meta.env.BASE_URL || "";
---

<section
  class="py-16 md:py-24"
>
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      {
        image && (
          <img
            src={`${basePath}/${image}`}
            alt="Logopädie 21 Logo"
            class="mx-auto max-h-48 my-8 mb-18"
          />
        )
      }

      <h1 class="text-xl md:text-3xl font-bold">{subtitle}</h1>
      <h3 class="text-base md:text-lg font-bold mb-8">{address}</h3>

      <div class="flex flex-col md:flex-row justify-center gap-4">
        <a
          href={`${basePath}/contact`}
          class="custom-badge py-3 px-6 md:text-lg md:w-1/3 transition duration-300"
        >
          Kontakt aufnehmen
        </a>
        <a
          href={`${basePath}/about`}
          class="custom-badge py-3 px-6 md:text-lg md:w-1/3 transition duration-300"
        >
          Über uns
        </a>
      </div>
    </div>
  </div>
</section>
