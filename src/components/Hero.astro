---
interface Props {
  title: string;
  subtitle: string;
  image?: string;
}

const { title, subtitle, image } = Astro.props;
const basePath = import.meta.env.BASE_URL || '';
---

<section class="bg-gradient-to-r from-primary to-secondary text-white py-16 md:py-24">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-2xl md:text-4xl font-bold mb-6">{title}</h1>
      
      {image && (
        <img src={`${basePath}/${image}`} alt="Logopädie 21 Logo" class="mx-auto max-h-32 my-8">
      )}
      
      <p class="text-lg md:text-xl mb-8">{subtitle}</p>
      
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href={`${basePath}/contact`} class="bg-white text-primary font-bold py-3 px-6 rounded-full hover:bg-gray-100 transition duration-300 text-center">
          Kontakt aufnehmen
        </a>
        <a href={`${basePath}/about`} class="bg-transparent border-2 border-white text-white font-bold py-3 px-6 rounded-full hover:bg-white hover:text-primary transition duration-300 text-center">
          Über uns
        </a>
      </div>
    </div>
  </div>
</section>