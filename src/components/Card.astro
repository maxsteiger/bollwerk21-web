---
interface Props {
  title?: string;
  color?: string;
  hasPadding?: boolean;
  hasHover?: boolean;
}

const {
  title,
  color = "white",
  hasPadding = true,
  hasHover = false,
} = Astro.props;

const hoverClass = hasHover
  ? "transition duration-300 hover:shadow-lg hover:-translate-y-1"
  : "";
const paddingClass = hasPadding ? "p-6" : "";
---

<div class={`bg-${color} rounded-lg shadow-md overflow-hidden ${hoverClass}`}>
  {
    title && (
      <div class="border-b border-gray-200 pb-4 mb-4">
        <h3 class="text-xl font-semibold">{title}</h3>
      </div>
    )
  }
  <div class={paddingClass}>
    <slot />
  </div>
</div>
