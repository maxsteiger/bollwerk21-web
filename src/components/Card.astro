---
import ServiceIcon from "./ServiceIcon.astro";

interface Props {
  title?: string;
  type: "evaluation" | "therapy" | "team" | "contact" | "";
  hasHover?: boolean;
}

const { title, type, hasHover = false } = Astro.props;

const typeColors = {
  evaluation: "brand-red",
  therapy: "brand-orange",
  team: "brand-green",
  contact: "brand-purple",
  "": "brand-blue",
}

const hoverClass = hasHover
  ? "transition duration-300 hover:shadow-lg hover:-translate-y-1 hover:scale-110"
  : "";

const basePath = import.meta.env.BASE_URL || "";
---

<div class={`grid grid-cols-2 gap-4 card-background rounded-lg shadow-md overflow-hidden p-6 ${hoverClass}`}>
  <h3 class="grid self-end text-xl font-extrabold">{title}</h3>
  <div class="grid justify-end mr-2">
    <ServiceIcon type={type}, size="md", color={typeColors[type]}/>
  </div>
  <div class="col-span-2">
    <slot />
    <a href={`${basePath}/${type}`} class={`font-semibold hover:underline hover:accent-${typeColors[type]}`}
      >Mehr erfahren â†’</a
    >
  </div>
</div>
