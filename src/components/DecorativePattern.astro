---
interface Props {
  position?: "top-left" | "top-right" | "bottom-left" | "bottom-right";
  color?: string;
  opacity?: number;
}

const {
  position = "top-right",
  color = "primary",
  opacity = 0.1,
} = Astro.props;

const positionClasses = {
  "top-left": "top-0 left-0",
  "top-right": "top-0 right-0",
  "bottom-left": "bottom-0 left-0",
  "bottom-right": "bottom-0 right-0",
};
---

<div class={`absolute ${positionClasses[position]} -z-10 overflow-hidden`}>
  <svg
    width="300"
    height="300"
    viewBox="0 0 300 300"
    xmlns="http://www.w3.org/2000/svg"
    class={`text-${color} opacity-${opacity * 100}`}
  >
    <!-- Simple speech bubble patterns representing speech therapy -->
    <path
      d="M50,50 C130,30 150,120 230,100"
      stroke="currentColor"
      fill="none"
      stroke-width="3"></path>
    <path
      d="M70,70 C140,50 160,140 250,120"
      stroke="currentColor"
      fill="none"
      stroke-width="3"></path>
    <path
      d="M90,90 C150,70 170,160 270,140"
      stroke="currentColor"
      fill="none"
      stroke-width="3"></path>
    <circle cx="250" cy="100" r="10" fill="currentColor"></circle>
    <circle cx="270" cy="120" r="8" fill="currentColor"></circle>
    <circle cx="290" cy="140" r="6" fill="currentColor"></circle>
  </svg>
</div>
