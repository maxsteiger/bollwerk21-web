---
import OptimizedImage from './OptimizedImage.astro';

interface Props {
  id: string;
  name: string;
  imagePath: string;
  color: string;
}

const { id, name, imagePath, color } = Astro.props;
const basePath = import.meta.env.BASE_URL || '';
---

<a href={`${basePath}/team/${id}`} class="block transition-transform hover:scale-105">
  <div class="overflow-hidden rounded-lg shadow-md">
    <OptimizedImage
      src={imagePath}
      alt={name}
      class="w-full h-100"
      objectPosition="center top"
    />
    <div
      class="p-2 text-center text-white font-semibold"
      style={`background-color: ${color};`}
    >
      {name}
    </div>
  </div>
</a>