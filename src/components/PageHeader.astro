<!-- src/components/PageHeader.astro -->
---
interface Props {
  title: string;
  image?: string;
  imageAlt?: string;
  color?: string;
}

const { 
  title, 
  image, 
  imageAlt = "", 
  color = "primary" 
} = Astro.props;
---

<section class={`bg-${color} bg-opacity-10 py-12`}>
  <div class="container mx-auto px-4">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
      {image && (
        <img 
          class="w-full h-[400px] object-cover object-center"
          src={image}
          alt={imageAlt}
        />
      )}
      <div class="p-8">
        <h1 class="text-3xl sm:text-4xl font-bold text-gray-800 mb-4">{title}</h1>
        <slot />
      </div>
    </div>
  </div>
</section>