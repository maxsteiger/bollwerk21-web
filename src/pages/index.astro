---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";

const basePath = import.meta.env.BASE_URL || "";
---

<MainLayout title="Logopädie 21 - Logopädische Praxis für Kinder in Bern">
  <Hero
    subtitle="LOGOPÄDISCHE PRAXIS FÜR KINDER"
    address="BOLLWERK 21 – CH-3011 BERN"
    image="logopaedie21.svg"
  />

  <!-- Services Overview Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl md:text-3xl font-bold text-center mb-12">
        Unsere Dienstleistungen
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Service Card 1: Abklärung -->
        <div
          class="bg-background-secondary-dark p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow"
        >
          <div
            class="bg-primary bg-opacity-10 p-3 rounded-full w-14 h-14 flex items-center justify-center mb-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6 text-primary"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
              ></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Abklärung</h3>
          <p class="text-gray-600 mb-4">
            Umfassende Abklärung bei Sprach- und Kommunikationsauffälligkeiten
            bei Kindern.
          </p>
          <a
            href={`${basePath}/evaluation`}
            class="text-primary font-semibold hover:underline"
            >Mehr erfahren →</a
          >
        </div>

        <!-- Service Card 2: Therapie -->
        <Card title="Therapie", type="therapy">
          <p class="text-gray-600 mb-4">
            Spielerische und individuell angepasste Sprachtherapie für Kinder
            und Jugendliche.
          </p>
        </Card>

        <!-- Service Card 3: Team -->
        <Card title="Unser Team", type="team">
          <p class="text-gray-600 mb-4">
            Fünf erfahrene Logopädinnen mit verschiedenen Spezialgebieten für
            die optimale Betreuung.
          </p>
        </Card>
      </div>
    </div>
  </section>
</MainLayout>
